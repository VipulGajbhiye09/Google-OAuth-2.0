<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>

    <% usersWithSecrets.forEach(function(user){ %>
      <p class="secret-text"> <%= user.secret %></p>
    <% }); %>

    <hr>

    <div class="btn-forms">
      <form class="logout-btn" action="/logout" method="post">
        <button class="btn btn-light btn-lg" type="submit">Log Out</button>
      </form>
    <a class="btn btn-dark btn-lg submit-secret-btn" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
